{
  "name": "signature-module",
  "version": "1.0.0",
  "description": "SDK completo para integração com API de assinatura digital",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "example:full-flow": "ts-node examples/01-full-signing-flow.ts",
    "example:templates": "ts-node examples/02-template-management.ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "keywords": [
    "digital-signature",
    "api",
    "sdk",
    "typescript",
    "envelope",
    "document-signing"
  ],
  "author": "Alos",
  "license": "MIT",
  "files": [
    "dist/**/*"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "dotenv": "^17.2.0",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.13",
    "axios-mock-adapter": "^2.1.0",
    "jest": "^30.0.4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
